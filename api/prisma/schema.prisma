generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Automovel {
  placa        String    @id
  proprietario String
  tipo         String
  modelo       String
  marca        String
  cor          String?
  ano          Int?
  telefone     String
  estadias     Estadia[]
}

model Estadia {
  id             Int       @id @default(autoincrement())
  entrada        DateTime  @default(now())
  saida          DateTime?
  valorHora      Float
  valorTotal     Float?
  automovel      Automovel @relation(fields: [automovelPlaca], references: [placa]) // Relacionamento com autom√≥vel
  automovelPlaca String
}
